---
const { caution, note, error } = Astro.props;
let variant: 'caution' | 'note' | 'error' = 'caution';
if (caution) {
	variant = "caution";
} else if (note) {
	variant = "note";
} else if (error) {
	variant = "error";
}
const colors = {
	caution: "#BFAA8D",     // 黄系
	note: "#AFCFA6",		// 緑系
	error: "#CFA6A6"		// 赤系
};
const textColor = colors[variant]; // デフォルトは caution
---

<span style={`color: ${textColor}; font-weight: bold;`}>
	<slot />
</span>